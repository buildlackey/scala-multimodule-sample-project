<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>dogs-api</servlet-name>
        <servlet-class>dogs.DogsRestApi</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cats-api</servlet-name>
        <servlet-class>cats.CatsRestApi</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>dogs-api</servlet-name>
        <url-pattern>/dogs-api/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cats-api</servlet-name>
        <url-pattern>/cats-api/*</url-pattern>
    </servlet-mapping>
</web-app>